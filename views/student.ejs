<link rel="stylesheet" href="/CSS/student.css">

<div id="student-container">
    <div id="student-title" class="mt-3">
        <h1>
            Placements | Students
        </h1>
    </div>

    <div id="student-form" class="card mt-5" >
        <form action="/students/create-student" method="POST" class="form-group card">
            <input type="text" name="name" id="student-name" class="form-control mb-2" placeholder="Name" required>
            <input type="email" name="email" id="student-email" class="form-control mb-2" placeholder="Email" required>
            <input type="text" name="college" id="student-college" class="form-control mb-2" placeholder="College Name" required>
            
            <select name="batch" id="select-batch" class="mb-2">
                <option value="" disabled selected>Select Batch</option>
                <option value="Career Camp Freshers">Career Camp Freshers</option>
                <option value="Career Camp Professionals">Career Camp Professionals</option>
                <option value="React">React</option>
                <option value="Cognizense">Cognizense</option>
            </select>

            <select name="status" id="select-status" class="mb-2">
                <option value="" disabled selected>Select Status</option>
                <option value="Placed"> Placed </option>
                <option value="Not_Placed"> Not Placed</option>
            </select>

            <input type="text" name="dsa" placeholder="Data SA Score" class="form-control mb-2">
            <input type="text" name="webd" placeholder="Web Dev Score" class="form-control mb-2">
            <input type="text" name="react" placeholder="Reactjs Score" class="form-control mb-2">
            <input type="submit" value="Add Student" class="btn btn-success"> 
        </form>
    </div>

    <div id="students-list-container">
        <table id="student-table" class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th rowspan="2">Student Name</th>
                    <th rowspan="2">Email</th>
                    <th rowspan="2">Batch</th>
                    <th rowspan="2">College</th>
                    <th rowspan="2">Status</th>
                    <th colspan="3" style="text-align: center;">Scores</th>
                </tr>
                <tr>
                    <th>DSA</th>
                    <th>WEBD</th>
                    <th>REACT</th>
                </tr>
            </thead>
            <tbody class="table-hover">
                <%for(s of students){%>
                    <tr>
                        <td><%=s.name%></td>
                        <td><%=s.email%></td>
                        <td><%=s.batch%></td>
                        <td><%=s.college%></td>
                        <td><%=s.status%></td>
                        <td><%=s.score.dsa%></td>
                        <td><%=s.score.webd%></td>
                        <td><%=s.score.react%></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
    </div>
</div>